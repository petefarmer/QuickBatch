<% if item_subtype.errors.any? %>
  <div class="bg-red-50 p-4 rounded-md">
    <h2 class="text-red-700 text-sm font-medium"><%= pluralize(item_subtype.errors.count, "error") %> prohibited this item subtype from being saved:</h2>
    <ul class="mt-2 text-sm text-red-600">
      <% item_subtype.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="space-y-6">
  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>
</div> 