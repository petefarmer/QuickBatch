<%# Header Section %>
<div class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="text-2xl font-semibold text-gray-900">Admin Dashboard</h1>
    <p class="mt-2 text-sm text-gray-700">System administration and configuration.</p>
  </div>
</div>

<%# Dashboard Grid %>
<div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <%# System Status Card %>
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">System Status</dt>
            <dd class="text-lg font-medium text-gray-900">Operational</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <%# User Management Card %>
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">User Management</dt>
            <dd class="text-lg font-medium text-gray-900">Manage Users</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <%# System Settings Card %>
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a6.759 6.759 0 010 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">System Settings</dt>
            <dd class="text-lg font-medium text-gray-900">Configure System</dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<%# System Settings Section %>
<div class="mt-8">
  <h2 class="text-lg font-medium text-gray-900">System Settings</h2>
  <div class="mt-4 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <%# Item Management %>
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-5">
        <h3 class="text-base font-medium text-gray-900">Item Management</h3>
        <div class="mt-4 space-y-2">
          <%= link_to "Item Types", admin_item_types_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Item Subtypes", admin_item_subtypes_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "ABC Keys", admin_abc_keys_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Commodity Keys", admin_commodity_keys_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Product Keys", admin_product_keys_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "ECCN Keys", admin_eccn_keys_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
      </div>
    </div>

    <%# Lot Management %>
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-5">
        <h3 class="text-base font-medium text-gray-900">Lot Management</h3>
        <div class="mt-4 space-y-2">
          <%= link_to "Auto Lot Issue Methods", admin_auto_lot_issue_methods_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Track Serial Lots", admin_track_serial_lots_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Storage Conditions", admin_storage_conditions_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
      </div>
    </div>

    <%# Address Management %>
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-5">
        <h3 class="text-base font-medium text-gray-900">Address Management</h3>
        <div class="mt-4 space-y-2">
          <%= link_to "Addresses", admin_addresses_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
      </div>
    </div>

    <%# Order Management %>
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-5">
        <h3 class="text-base font-medium text-gray-900">Order Management</h3>
        <div class="mt-4 space-y-2">
          <%= link_to "Order Methods", admin_order_methods_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
          <%= link_to "Price Groups", admin_price_groups_path, class: "block text-sm text-indigo-600 hover:text-indigo-900" %>
        </div>
      </div>
    </div>
  </div>
</div> 