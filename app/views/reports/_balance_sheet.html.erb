<%# Balance Sheet Report %>
<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="px-4 py-5 sm:px-6 bg-gray-50">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Balance Sheet
      <span class="text-sm font-normal text-gray-500">
        (as of <%= @report_date&.strftime('%B %d, %Y') %>)
      </span>
    </h3>
  </div>

  <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
    <%# Assets Section %>
    <div class="mb-8">
      <h4 class="text-base font-semibold text-gray-900 mb-4">Assets</h4>
      <div class="space-y-2">
        <% @report[:assets].each do |asset| %>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600"><%= asset[:name] %></span>
            <span class="text-gray-900"><%= number_to_currency(asset[:amount]) %></span>
          </div>
        <% end %>
        <div class="flex justify-between font-semibold border-t border-gray-200 pt-2 mt-4">
          <span>Total Assets</span>
          <span><%= number_to_currency(@report[:total_assets]) %></span>
        </div>
      </div>
    </div>

    <%# Liabilities Section %>
    <div class="mb-8">
      <h4 class="text-base font-semibold text-gray-900 mb-4">Liabilities</h4>
      <div class="space-y-2">
        <% @report[:liabilities].each do |liability| %>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600"><%= liability[:name] %></span>
            <span class="text-gray-900"><%= number_to_currency(liability[:amount]) %></span>
          </div>
        <% end %>
        <div class="flex justify-between font-semibold border-t border-gray-200 pt-2 mt-4">
          <span>Total Liabilities</span>
          <span><%= number_to_currency(@report[:total_liabilities]) %></span>
        </div>
      </div>
    </div>

    <%# Equity Section %>
    <div class="mb-8">
      <h4 class="text-base font-semibold text-gray-900 mb-4">Equity</h4>
      <div class="space-y-2">
        <% @report[:equity].each do |equity| %>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600"><%= equity[:name] %></span>
            <span class="text-gray-900"><%= number_to_currency(equity[:amount]) %></span>
          </div>
        <% end %>
        <div class="flex justify-between font-semibold border-t border-gray-200 pt-2 mt-4">
          <span>Total Equity</span>
          <span><%= number_to_currency(@report[:total_equity]) %></span>
        </div>
      </div>
    </div>

    <%# Total Liabilities and Equity %>
    <div class="border-t-2 border-gray-300 pt-4 mt-8">
      <div class="flex justify-between font-semibold text-lg">
        <span>Total Liabilities and Equity</span>
        <span><%= number_to_currency(@report[:total_liabilities] + @report[:total_equity]) %></span>
      </div>
    </div>
  </div>
</div> 