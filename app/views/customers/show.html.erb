<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="py-6">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Customer Details</h1>
        <div class="mt-2 text-sm text-gray-700">
          <span class="font-medium">Customer Key:</span> <%= @customer.customer_key %> |
          <span class="font-medium">Customer Name:</span> <%= @customer.customer_name %>
        </div>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_customer_path(@customer), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= link_to "Back to List", customers_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>

    <!-- Tabs -->
    <div class="mt-6" data-controller="tabs" data-tabs-initial-tab-value="customer-info">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          <button data-tabs-target="tab" data-action="click->tabs#switch" data-tab="customer-info" class="border-indigo-500 text-indigo-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
            Customer Information
          </button>
          <button data-tabs-target="tab" data-action="click->tabs#switch" data-tab="transaction-defaults" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
            Transaction Defaults
          </button>
          <button data-tabs-target="tab" data-action="click->tabs#switch" data-tab="process-info" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
            Process Information
          </button>
        </nav>
      </div>

      <!-- Tab Content -->
      <div class="mt-6">
        <!-- Customer Information Tab -->
        <div data-tabs-target="panel" data-tab="customer-info">
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Customer Information</h3>
            </div>
            <div class="border-t border-gray-200">
              <div class="px-4 py-5 sm:px-6">
                <p class="text-sm text-gray-500">Fields go here</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Transaction Defaults Tab -->
        <div data-tabs-target="panel" data-tab="transaction-defaults" class="hidden">
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Transaction Defaults</h3>
            </div>
            <div class="border-t border-gray-200">
              <div class="px-4 py-5 sm:px-6">
                <div class="space-y-4">
                  <div class="text-sm text-gray-500">
                    Transaction default details here
                  </div>
                  <div class="mt-4">
                    <p class="text-sm text-gray-500">Configure default settings for transactions with this customer.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Process Information Tab -->
        <div data-tabs-target="panel" data-tab="process-info" class="hidden">
          <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Process Information</h3>
            </div>
            <div class="border-t border-gray-200">
              <div class="px-4 py-5 sm:px-6">
                <p class="text-sm text-gray-500">Process information will be configured here.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get all tab buttons
    const tabButtons = document.querySelectorAll('.tab-button');
    
    // Add click event listener to each button
    tabButtons.forEach(button => {
      button.addEventListener('click', function() {
        const tabId = this.getAttribute('data-tab');
        
        // Hide all tab contents
        document.querySelectorAll('.tab-content').forEach(content => {
          content.classList.add('hidden');
        });
        
        // Show selected tab content
        document.getElementById(tabId).classList.remove('hidden');
        
        // Update tab button styles
        tabButtons.forEach(btn => {
          if (btn === this) {
            btn.classList.remove('border-transparent', 'text-gray-500');
            btn.classList.add('border-indigo-500', 'text-indigo-600');
          } else {
            btn.classList.remove('border-indigo-500', 'text-indigo-600');
            btn.classList.add('border-transparent', 'text-gray-500');
          }
        });
      });
    });
  });
</script>
