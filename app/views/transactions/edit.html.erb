<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Edit Transaction</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @transaction, local: true) do |f| %>
            <% if @transaction.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h4>
                <ul>
                  <% @transaction.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :date %>
              <%= f.date_field :date, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_field :description, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :amount %>
              <%= f.number_field :amount, step: '0.01', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :transaction_type %>
              <%= f.select :transaction_type, 
                  ['operating', 'investing', 'financing'].map { |t| [t.titleize, t] },
                  {}, 
                  class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :account_id, 'Account' %>
              <%= f.collection_select :account_id, 
                  Account.all, 
                  :id, 
                  :name, 
                  {}, 
                  class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit 'Update Transaction', class: 'btn btn-primary' %>
              <%= link_to 'Cancel', @transaction, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
